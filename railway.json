{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 4 --worker-class sync --timeout 120 --access-logfile - --error-logfile - backend.main:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 10
  },
  "environments": {
    "production": {
      "build": {
        "builder": "DOCKERFILE"
      },
      "deploy": {
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 4 --worker-class sync --timeout 120 backend.main:app"
      }
    },
    "development": {
      "build": {
        "builder": "DOCKERFILE"
      },
      "deploy": {
        "startCommand": "python backend/main.py"
      }
    }
  }
}